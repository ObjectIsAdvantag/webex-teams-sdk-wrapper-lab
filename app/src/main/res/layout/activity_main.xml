<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.ryanweddle.webexteamssdkwrappersample.MainActivity">

<EditText
    android:id="@+id/text_callee"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:inputType="textEmailAddress"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/image_sparklogo" />

<EditText
    android:id="@+id/text_jwt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:inputType="text"
    android:text="guest token"
    app:layout_constraintEnd_toEndOf="@+id/text_callee"
    app:layout_constraintStart_toStartOf="@+id/text_callee"
    app:layout_constraintTop_toBottomOf="@+id/text_callee" />

<Button
    android:id="@+id/button_call"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:text="Call"
    app:layout_constraintEnd_toEndOf="@+id/text_jwt"
    app:layout_constraintStart_toStartOf="@+id/text_jwt"
    app:layout_constraintTop_toBottomOf="@+id/text_jwt" />

    <ImageView
        android:id="@+id/image_sparklogo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teams_logo3x" />

</android.support.constraint.ConstraintLayout>
